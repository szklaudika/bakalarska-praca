            android:background="@drawable/checkbox_background"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Poistka - Velká éra"
                android:textAllCaps="true"
                android:textStyle="normal" />

            <!-- Poistenie zodpovednosti ČR + SK -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="4dp">

                <CheckBox
                    android:id="@+id/chk_poistenie_zodpovednost_cr_sk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/checkbox_tint"
                    android:text="Poistenie zodpovednosti ČR + SK  -"
                    android:textColor="#FFFFFF" />

                <EditText
                    android:id="@+id/et_expiry_poistka_cr_sk"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Expiry (yyyy-MM-dd)"
                    android:inputType="date"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Poistenie zodpovednosti SVET -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="4dp">

                <CheckBox
                    android:id="@+id/chk_zodpovednosti_svet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/checkbox_tint"
                    android:text="Poistenie zodpovednosti SVET  -"
                    android:textColor="#FFFFFF" />

                <EditText
                    android:id="@+id/et_expiry_poistka_svet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Expiry (yyyy-MM-dd)"
                    android:inputType="date"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <!-- Common note field -->
        <EditText
            android:id="@+id/et_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Note"
            android:background="@drawable/rounded_edittext"
            android:minHeight="48dp" />

        <!-- Add Certificate Button -->
        <Button
            android:id="@+id/btn_add_certificate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:text="Pridať kvalifikáciu"
            android:textColor="@android:color/black"
            android:background="@drawable/rounded_button"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</ScrollView>
