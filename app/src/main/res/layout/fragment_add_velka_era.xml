                    android:hint="Expiry (yyyy-MM-dd)"
                    android:visibility="gone"
                    android:inputType="date" />
            </LinearLayout>

            <!-- Poistenie zodpovednosti SVET -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">
                <CheckBox
                    android:id="@+id/chk_zodpovednosti_svet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Poistenie zodpovednosti SVET"
                    android:textColor="#FFFFFF"
                    android:buttonTint="@color/checkbox_tint" />
                <EditText
                    android:id="@+id/et_expiry_poistka_svet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Expiry (yyyy-MM-dd)"
                    android:visibility="gone"
                    android:inputType="date" />
            </LinearLayout>
        </LinearLayout>

        <!-- Common note field -->
        <EditText
            android:id="@+id/et_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Note"
            android:minHeight="48dp" />

        <!-- Add Certificate Button -->
        <Button
            android:id="@+id/btn_add_certificate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pridať kvalifikáciu"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>
