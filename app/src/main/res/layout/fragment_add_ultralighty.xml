<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddUltralightyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Section: Letecké kvalifikácie - ultralighty -->
        <LinearLayout
            android:id="@+id/layout_lk_ultralighty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1a1a1a"
            android:padding="8dp"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Letecké kvalifikácie - Ultralighty"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <!-- ULL(a) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">

                <CheckBox
                    android:id="@+id/chk_ull_ultralighty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ULL(a)"
                    android:textColor="#FFFFFF"
                    android:buttonTint="@color/checkbox_tint" />

                <EditText
                    android:id="@+id/et_expiry_ull_ultralighty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Expiry (yyyy-MM-dd)"
                    android:visibility="gone"
                    android:inputType="date" />
            </LinearLayout>

            <!-- Riadené lety VFR -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">

                <CheckBox
                    android:id="@+id/chk_vfr_ultralighty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Riadené lety VFR"
                    android:textColor="#FFFFFF"
                    android:buttonTint="@color/checkbox_tint" />

                <EditText
                    android:id="@+id/et_expiry_vfr_ultralighty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Expiry (yyyy-MM-dd)"
                    android:visibility="gone"
                    android:inputType="date" />
            </LinearLayout>

            <!-- Inštruktor -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">

                <CheckBox
                    android:id="@+id/chk_instruktor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inštruktor"
                    android:textColor="#FFFFFF"
                    android:buttonTint="@color/checkbox_tint" />

                <EditText
                    android:id="@+id/et_expiry_instruktor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Expiry (yyyy-MM-dd)"
                    android:visibility="gone"
                    android:inputType="date" />
            </LinearLayout>

            <!-- Vlekár -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">

                <CheckBox
                    android:id="@+id/chk_vlekar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vlekár"
                    android:textColor="#FFFFFF"
                    android:buttonTint="@color/checkbox_tint" />

                <EditText
                    android:id="@+id/et_expiry_vlekar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Expiry (yyyy-MM-dd)"
                    android:visibility="gone"
                    android:inputType="date" />
            </LinearLayout>

            <!-- Skúšobný pilot -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">

                <CheckBox
                    android:id="@+id/chk_skusobny_pilot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skúšobný pilot"
                    android:textColor="#FFFFFF"
                    android:buttonTint="@color/checkbox_tint" />

                <EditText
                    android:id="@+id/et_expiry_skusobny_pilot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Expiry (yyyy-MM-dd)"
                    android:visibility="gone"
                    android:inputType="date" />
            </LinearLayout>

            <!-- Vysadzovač -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">

                <CheckBox
                    android:id="@+id/chk_vysadzovac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vysadzovač"
                    android:textColor="#FFFFFF"
                    android:buttonTint="@color/checkbox_tint" />

                <EditText
                    android:id="@+id/et_expiry_vysadzovac"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Expiry (yyyy-MM-dd)"
                    android:visibility="gone"
                    android:inputType="date" />
            </LinearLayout>

        </LinearLayout>


        <!-- Layout pre Medical - Ultralighty -->
        <LinearLayout
            android:id="@+id/layout_medical_ultralighty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:padding="8dp"
            android:background="#1a1a1a">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medical - Ultralighty"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <!-- Osvedčenie zdravotnej spôsobilosti 2. triedy -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">

                <CheckBox
                    android:id="@+id/chk_osvedcenie_ultralighty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Osvedčenie zdravotnej spôsobilosti 2. triedy"
                    android:textColor="#FFFFFF"
                    android:buttonTint="@color/checkbox_tint" />

                <EditText
                    android:id="@+id/et_expiry_osvedcenie_ultralighty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Expiry (yyyy-MM-dd)"
                    android:visibility="gone"
                    android:inputType="date" />
            </LinearLayout>
        </LinearLayout>


        <!-- Layout pre Rádio - Ultralighty -->
        <LinearLayout
            android:id="@+id/layout_radio_ultralighty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:padding="8dp"
            android:background="#1a1a1a">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rádio - Ultralighty"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <!-- Všeobecný preukaz radiofonisty -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">

                <CheckBox
                    android:id="@+id/chk_vseobecny_preukaz_ultralighty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Všeobecný preukaz radiofonisty"
                    android:textColor="#FFFFFF"
                    android:buttonTint="@color/checkbox_tint" />

                <EditText
                    android:id="@+id/et_expiry_vseobecny_preukaz_ultralighty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Expiry (yyyy-MM-dd)"
                    android:visibility="gone"
                    android:inputType="date" />
            </LinearLayout>

            <!-- Obmedzený preukaz radiofonisty -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">

                <CheckBox
                    android:id="@+id/chk_obmedzeny_preukaz_ultralighty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Obmedzený preukaz radiofonisty"
                    android:textColor="#FFFFFF"
                    android:buttonTint="@color/checkbox_tint" />

                <EditText
                    android:id="@+id/et_expiry_obmedzeny_preukaz_ultralighty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Expiry (yyyy-MM-dd)"
                    android:visibility="gone"
                    android:inputType="date" />
            </LinearLayout>
        </LinearLayout>


        <!-- Layout pre Angličtina - Ultralighty -->
        <LinearLayout
            android:id="@+id/layout_anglictina_ultralighty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:padding="8dp"
            android:background="#1a1a1a">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Angličtina - Ultralighty"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <!-- ICAO English LEVEL 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">

                <CheckBox
                    android:id="@+id/chk_english_level4_ultralighty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ICAO English LEVEL 4"
                    android:textColor="#FFFFFF"
                    android:buttonTint="@color/checkbox_tint" />

                <EditText
                    android:id="@+id/et_expiry_english_level4_ultralighty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Expiry (yyyy-MM-dd)"
                    android:visibility="gone"
                    android:inputType="date" />
            </LinearLayout>

            <!-- ICAO English LEVEL 5 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">

                <CheckBox
                    android:id="@+id/chk_english_level5_ultralighty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ICAO English LEVEL 5"
                    android:textColor="#FFFFFF"
                    android:buttonTint="@color/checkbox_tint" />

                <EditText
                    android:id="@+id/et_expiry_english_level5_ultralighty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Expiry (yyyy-MM-dd)"
                    android:visibility="gone"
                    android:inputType="date" />
            </LinearLayout>

            <!-- ICAO English LEVEL 6 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">

                <CheckBox
                    android:id="@+id/chk_english_level6_ultralighty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ICAO English LEVEL 6"
                    android:textColor="#FFFFFF"
                    android:buttonTint="@color/checkbox_tint" />

                <EditText
                    android:id="@+id/et_expiry_english_level6_ultralighty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Expiry (yyyy-MM-dd)"
                    android:visibility="gone"
                    android:inputType="date" />
            </LinearLayout>
        </LinearLayout>


        <!-- Layout pre Poistka - Ultralighty -->
        <LinearLayout
            android:id="@+id/layout_poistka_ultralighty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:padding="8dp"
            android:background="#1a1a1a">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Poistka - Ultralighty"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <!-- Poistenie zodpovednosti ČR + SK -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">

                <CheckBox
                    android:id="@+id/chk_poistenie_zodpovednost_cr_sk_ultralighty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Poistenie zodpovednosti ČR + SK"
                    android:textColor="#FFFFFF"
                    android:buttonTint="@color/checkbox_tint" />

                <EditText
                    android:id="@+id/et_expiry_poistenie_zodpovednost_cr_sk_ultralighty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Expiry (yyyy-MM-dd)"
                    android:visibility="gone"
                    android:inputType="date" />
            </LinearLayout>

            <!-- Poistenie zodpovednosti SVET -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">

                <CheckBox
                    android:id="@+id/chk_zodpovednosti_svet_ultralighty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Poistenie zodpovednosti SVET"
                    android:textColor="#FFFFFF"
                    android:buttonTint="@color/checkbox_tint" />

                <EditText
                    android:id="@+id/et_expiry_zodpovednosti_svet_ultralighty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Expiry (yyyy-MM-dd)"
                    android:visibility="gone"
                    android:inputType="date" />
            </LinearLayout>

        </LinearLayout>
        <!-- Common note field -->
        <EditText
            android:id="@+id/et_note_ultralighty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Note"
            android:minHeight="48dp" />

        <!-- Add Certificate Button -->
        <Button
            android:id="@+id/btn_add_certificate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pridať kvalifikáciu"
            android:layout_marginTop="16dp" />


    </LinearLayout>
</ScrollView>
