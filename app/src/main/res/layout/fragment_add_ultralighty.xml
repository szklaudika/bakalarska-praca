<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddUltralightyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Section: Letecké kvalifikácie - ultralighty -->
        <LinearLayout
            android:id="@+id/layout_lk_ultralighty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aviation Qualifications - Ultralights"
                android:textStyle="normal"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="true" />

            <!-- ULL(a) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">

                <CheckBox
                    android:id="@+id/chk_ull_ultralighty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ULL(a)   -"
                    android:textColor="?android:textColorPrimary"
                    android:buttonTint="?attr/checkboxTint" />

                <EditText
                    android:id="@+id/et_expiry_ull_ultralighty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Expiry (yyyy-MM-dd)"
                    android:visibility="gone"
                    android:inputType="date"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Riadené lety VFR -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">

                <CheckBox
                    android:id="@+id/chk_vfr_ultralighty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Controlled VFR flights   -"
                    android:textColor="?android:textColorPrimary"
                    android:buttonTint="?attr/checkboxTint" />

                <EditText
                    android:id="@+id/et_expiry_vfr_ultralighty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Expiry (yyyy-MM-dd)"
                    android:visibility="gone"
                    android:inputType="date"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Inštruktor -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">

                <CheckBox
                    android:id="@+id/chk_instruktor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Instructor   -"
                    android:textColor="?android:textColorPrimary"
                    android:buttonTint="?attr/checkboxTint" />

                <EditText
                    android:id="@+id/et_expiry_instruktor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Expiry (yyyy-MM-dd)"
                    android:visibility="gone"
                    android:inputType="date"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Vlekár -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">

                <CheckBox
                    android:id="@+id/chk_vlekar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Towing pilot   -"
                    android:textColor="?android:textColorPrimary"
                    android:buttonTint="?attr/checkboxTint" />

                <EditText
                    android:id="@+id/et_expiry_vlekar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Expiry (yyyy-MM-dd)"
                    android:visibility="gone"
                    android:inputType="date"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Skúšobný pilot -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">

                <CheckBox
                    android:id="@+id/chk_skusobny_pilot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test pilot   -"
                    android:textColor="?android:textColorPrimary"
                    android:buttonTint="?attr/checkboxTint" />

                <EditText
                    android:id="@+id/et_expiry_skusobny_pilot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Expiry (yyyy-MM-dd)"
                    android:visibility="gone"
                    android:inputType="date"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Vysadzovač -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">

                <CheckBox
                    android:id="@+id/chk_vysadzovac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skydiving pilot   -"
                    android:textColor="?android:textColorPrimary"
                    android:buttonTint="?attr/checkboxTint" />

                <EditText
                    android:id="@+id/et_expiry_vysadzovac"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Expiry (yyyy-MM-dd)"
                    android:visibility="gone"
                    android:inputType="date"
                    android:textSize="14sp"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/dashed_divider" />


        <!-- Layout pre Medical - Ultralighty -->
        <LinearLayout
            android:id="@+id/layout_medical_ultralighty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medical - Ultralights"
                android:textStyle="normal"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="true" />

            <!-- Osvedčenie zdravotnej spôsobilosti 2. triedy -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">

                <CheckBox
                    android:id="@+id/chk_osvedcenie_ultralighty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="?attr/checkboxTint"
                    android:text="2nd Class Medical Certificate   -"
                    android:textColor="?android:textColorPrimary" />

                <EditText
                    android:id="@+id/et_expiry_osvedcenie_ultralighty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Expiry (yyyy-MM-dd)"
                    android:visibility="gone"
                    android:inputType="date"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/dashed_divider" />


        <!-- Layout pre Rádio - Ultralighty -->
        <LinearLayout
            android:id="@+id/layout_radio_ultralighty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Radio - Ultralights"
                android:textStyle="normal"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="true" />

            <!-- Všeobecný preukaz radiofonisty -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">

                <CheckBox
                    android:id="@+id/chk_vseobecny_preukaz_ultralighty"
                    android:layout_width="244dp"
                    android:layout_height="wrap_content"
                    android:buttonTint="?attr/checkboxTint"
                    android:text="General Radiotelephone Operator License   -"
                    android:textColor="?android:textColorPrimary" />

                <EditText
                    android:id="@+id/et_expiry_vseobecny_preukaz_ultralighty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Expiry (yyyy-MM-dd)"
                    android:visibility="gone"
                    android:inputType="date"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Obmedzený preukaz radiofonisty -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">

                <CheckBox
                    android:id="@+id/chk_obmedzeny_preukaz_ultralighty"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:buttonTint="?attr/checkboxTint"
                    android:text="Restricted Radiotelephone Operator License   -"
                    android:textColor="?android:textColorPrimary" />

                <EditText
                    android:id="@+id/et_expiry_obmedzeny_preukaz_ultralighty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Expiry (yyyy-MM-dd)"
                    android:visibility="gone"
                    android:inputType="date"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/dashed_divider" />


        <!-- Layout pre Angličtina - Ultralighty -->
        <LinearLayout
            android:id="@+id/layout_anglictina_ultralighty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English - Ultralights"
                android:textStyle="normal"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="true" />

            <!-- ICAO English LEVEL 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">

                <CheckBox
                    android:id="@+id/chk_english_level4_ultralighty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ICAO English LEVEL 4   -"
                    android:textColor="?android:textColorPrimary"
                    android:buttonTint="?attr/checkboxTint" />

                <EditText
                    android:id="@+id/et_expiry_english_level4_ultralighty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Expiry (yyyy-MM-dd)"
                    android:visibility="gone"
                    android:inputType="date"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- ICAO English LEVEL 5 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">

                <CheckBox
                    android:id="@+id/chk_english_level5_ultralighty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ICAO English LEVEL 5   -"
                    android:textColor="?android:textColorPrimary"
                    android:buttonTint="?attr/checkboxTint" />

                <EditText
                    android:id="@+id/et_expiry_english_level5_ultralighty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Expiry (yyyy-MM-dd)"
                    android:visibility="gone"
                    android:inputType="date"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- ICAO English LEVEL 6 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">

                <CheckBox
                    android:id="@+id/chk_english_level6_ultralighty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ICAO English LEVEL 6   -"
                    android:textColor="?android:textColorPrimary"
                    android:buttonTint="?attr/checkboxTint" />

                <EditText
                    android:id="@+id/et_expiry_english_level6_ultralighty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Expiry (yyyy-MM-dd)"
                    android:visibility="gone"
                    android:inputType="date"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/dashed_divider" />


        <!-- Layout pre Poistka - Ultralighty -->
        <LinearLayout
            android:id="@+id/layout_poistka_ultralighty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Insurance - Ultralights"
                android:textStyle="normal"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="true" />

            <!-- Poistenie zodpovednosti ČR + SK -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">

                <CheckBox
                    android:id="@+id/chk_poistenie_zodpovednost_cr_sk_ultralighty"
                    android:layout_width="212dp"
                    android:layout_height="52dp"
                    android:buttonTint="?attr/checkboxTint"
                    android:text="Liability insurance (Czech Republic + Slovakia)   -"
                    android:textColor="?android:textColorPrimary" />

                <EditText
                    android:id="@+id/et_expiry_poistenie_zodpovednost_cr_sk_ultralighty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Expiry (yyyy-MM-dd)"
                    android:visibility="gone"
                    android:inputType="date"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Poistenie zodpovednosti SVET -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">

                <CheckBox
                    android:id="@+id/chk_zodpovednosti_svet_ultralighty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Worldwide liability insurance   -"
                    android:textColor="?android:textColorPrimary"
                    android:buttonTint="?attr/checkboxTint" />

                <EditText
                    android:id="@+id/et_expiry_zodpovednosti_svet_ultralighty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Expiry (yyyy-MM-dd)"
                    android:visibility="gone"
                    android:inputType="date"
                    android:textSize="14sp"/>
            </LinearLayout>

        </LinearLayout>
        <!-- Common note field -->
        <EditText
            android:id="@+id/et_note_ultralighty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Note"
            android:background="?attr/editTextBackground"
            android:minHeight="48dp" />

        <!-- Add Certificate Button -->
        <Button
            android:id="@+id/btn_add_certificate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:background="?attr/buttonBackground"
            android:text="Add Certificate" />


    </LinearLayout>
</ScrollView>
