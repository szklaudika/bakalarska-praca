<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/ll_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pridaj certifikát/licenciu"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_marginBottom="24dp"
                android:gravity="center" />

            <!-- Buttons (each full width, with margin, padding, and custom background) -->
            <Button
                android:id="@+id/btn_platform_velka_era"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:padding="16dp"
                android:text="Velká éra"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:background="@drawable/btn_selector"
                android:contentDescription="Select Velká éra" />

            <Button
                android:id="@+id/btn_platform_ultralighty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:padding="16dp"
                android:text="Ultralighty"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:background="@drawable/btn_selector"
                android:contentDescription="Select Ultralighty" />

            <Button
                android:id="@+id/btn_platform_vetrone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:padding="16dp"
                android:text="Vetrone"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:background="@drawable/btn_selector"
                android:contentDescription="Select Vetrone" />

            <Button
                android:id="@+id/btn_platform_vrtulniky"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:padding="16dp"
                android:text="Vrtuľníky"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:background="@drawable/btn_selector"
                android:contentDescription="Select Vrtuľníky" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
