<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <TextView
        android:id="@+id/tv_expiry_date"
        android:layout_width="wrap_content"
        android:layout_height="69dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:text="2025&#10;Mar 19"
        android:textSize="15sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_certificate_details"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_margin="4dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardUseCompatPadding="true">

        <!-- Použijeme vnútorný FrameLayout s pozadím -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/certificateImage">

            <TextView
                android:id="@+id/tv_certificate_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="PPL (Letecké kvalifikácie)"
                android:textSize="14sp" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
