<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/et_departure_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Departure Location" />

    <EditText
        android:id="@+id/et_arrival_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Arrival Location" />

    <EditText
        android:id="@+id/et_flight_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Flight Date (yyyy-mm-dd)" />

    <EditText
        android:id="@+id/et_flight_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Flight Time (hh:mm)" />

    <EditText
        android:id="@+id/et_flight_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Flight Duration (hours)" />

    <EditText
        android:id="@+id/et_flight_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Day or Night" />

    <Button
        android:id="@+id/btn_add_flight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Flight" />
</LinearLayout>
