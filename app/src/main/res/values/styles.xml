<resources>

    <!-- Base application theme. -->
    <style name="Theme.Zapisnik" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/bg_image</item>
        <!-- Other customizations -->
    </style>

    <style name="TableHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">?android:attr/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TableData">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CalendarDayGreyText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>


</resources>


